<% layout("/layouts/boilerplate") %>
<body>
    <div class="row mb-3 mt-3">
        <div class="col-8 offset-2">
            <h3>Edit Your Listings</h3>
            <form method="POST" action="/listings/<%=listing.id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" type="text" required value="<%=listing.title%>">
                    <div class="valid-feedback">Title Looks Good!</div>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" required class="form-control" id="" ><%=listing.description%></textarea>
                    <div class="invalid-feedback">Please enter a short description</div>
                </div>

                <div class="mb-3 img-src">
                    Original Listing Name <br>
                    <img src="<%=originalImage %>" alt="">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload New Image</label>
                    <input name="listing[image]" class="form-control" type="file">
                </div>
                
                <div class="row">
                    <div class="mb-3 col-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" required class="form-control" type="number" value="<%=listing.price%>">
                        <div class="invalid-feedback">Price should be valid</div>
                    </div>
    
                    <div class="mb-3 col-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" required class="form-control" type="text" value="<%=listing.country%>">
                        <div class="invalid-feedback">Country name should be valid</div>
                    </div>
                </div>
                

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" required class="form-control" type="text" value="<%=listing.location%>">
                    <div class="invalid-feedback">Location should be valid</div>
                </div>

                <button class="btn btn-dark edit-btn mt-3">Edit</button>
            </form>
        </div>
        
    </div>
    
</body>